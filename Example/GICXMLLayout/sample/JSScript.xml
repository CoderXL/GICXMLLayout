<page title="JSScript">
    <style path="style/CommonStyle.xml" />
    <scroll-view background-color="white">
        <inset-panel inset="15">
            <behaviors>
                <script>
                    this.inset = 30;
                    this.backgroundColor = "blue";
                </script>
            </behaviors>
            <stack-panel>
                <lable>
                    <behaviors>
                        <script>
                            this.text += "ha11";
                            this.fontColor = "red";
                            this.fontSize = this.fontSize.toInt()+25;
                            console.log(this);
                            this.onclick = ()=>{
                                this.text = 'aaaaa';
                            };
                        </script>
                    </behaviors>
                </lable>

                <stack-panel is-horizon="1" space="10">
                    <behaviors>
                        <script>
                            this.dataContext = '[1,2]';
                        </script>
                    </behaviors>
                    <for>
                        <lable text="111"/>
                    </for>
                </stack-panel>
            </stack-panel>
        </inset-panel>
    </scroll-view>
</page>

